    <div class="container">
        <div class="navbar">
            <div class="logo">
                <img src="/images/logo.png" alt="" class="logo">
            </div>
            <nav class="margin-nav">
                <ul id="menuitems">
                    <li><a href="/">Home</a></li>
                    <li><a href="/about">About</a></li>
                    <li><a href="/contact">Contact</a></li>
                    <% if(!currentUser){ %>
                        <li>
                            <a href="/login">Account</a>
                        </li>
                    <% } else { %>
                        <li ><a href="/dashboard">
                            Signed in as <%= currentUser.username %></a></li>
                        <li><a href="/logout">Logout</a></li>
                        <li><a href="/cart"><img src="/images/cart.png" width="30px" height="30px" class="cart-nav"></a></li>
                    <% } %>
                </ul>
            </nav>
            <img src="/images/menu.png" alt="" class="menu-icon" onclick="menutoggle()">
        </div>
        </div>

        <div class="container">
            <% if(success && success.length>0){ %>
                <div id="flash" class="alert alert-success" role="alert">
                    <%= success %>
                </div>
            <% } %>
            <% if(error && error.length>0){ %>
                <div id="flash" class="alert alert-danger" role="alert">
                    <div><%= error %></div>
                </div>
            <% } %>
        </div>